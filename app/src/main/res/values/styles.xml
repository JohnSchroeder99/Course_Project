<resources>

    <!-- Base application theme. -->
    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorAccent</item>

    </style>

    <style name="MyTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AddItemStyle" parent="MyTheme" >
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name ="android:textSize">15dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_centerHorizontal">true</item>

    </style>

    <style name="DetailViewStyle" parent="MyTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name ="android:gravity">center</item>

        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="listViewStyle" parent="MyTheme">

    </style>


</resources>
